<div id="currentInfo">
  <% if current_user %>
    <span><%= link_to "Log Out", signout_path %></span>
  <% else %>
    <span><%= link_to "Log in with Foursquare", "/auth/foursquare" %></span>
  <% end %>
</div>

<div id="title">
  <i class="fa fa-foursquare"></i> <% if current_user %><strong><%= current_user.name %></strong>'s checkins<% else %>Foursphere<% end %>
</div>

<% if current_user %>
  <script type="text/javascript">
    // Where to put the globe?
    var container = document.getElementById( 'container' );
    // Make the globe
    var globe = new DAT.Globe( container );
    // Parse the JSON
    var data = JSON.parse( gon.data );
    // Tell the globe about your JSON data
    globe.addData( data[0][1], {format: 'magnitude', name: data[0][0]} );
    // Create the geometry
    globe.createPoints();
    // Begin animation
    globe.animate();
  </script>
<% else %>
  <script type="text/javascript">
    // Where to put the globe?
    var container = document.getElementById( 'container' );
    // Make the globe
    var globe = new DAT.Globe( container );
    // Create the geometry
    globe.createPoints();
    // Begin animation
    globe.animate();
  </script>
<% end %>